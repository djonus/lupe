<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/synth_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="24dp"
        android:text="R2D2 X Y synth pad"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_synth_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:hint="text result"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@id/synth_pad"
        app:layout_constraintStart_toStartOf="@id/synth_pad"
        app:layout_constraintTop_toTopOf="@id/synth_pad" />

    <Button
        android:id="@+id/b_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="record"
        app:layout_constraintEnd_toStartOf="@+id/b_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/synth_pad" />

    <Button
        android:id="@+id/b_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="play"
        app:layout_constraintBottom_toBottomOf="@id/b_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/b_record"
        app:layout_constraintTop_toTopOf="@id/b_record" />

</androidx.constraintlayout.widget.ConstraintLayout>
